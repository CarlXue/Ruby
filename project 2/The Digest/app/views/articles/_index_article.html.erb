<div class="panel panel-default">
  <div class="panel-body">
  	<h2><%= article.title %> <br><br><small>Created On: <%= article.created_at.strftime("%Y %m %d")%></small></h2>
  	<p><%= truncate(article.source, length: 25, separator: ' ') %></p>
  	<% unless article.tag_list.empty? %>
  		<p>Tagged: <%= article.tag_list.join(' ') %></p>
  	<% end %>
  	<div class="btn-group pull-right" role="group">
	  	<%= link_to 'Show', article, class: "btn btn-default" %>

	</div>
  </div>

</div>

