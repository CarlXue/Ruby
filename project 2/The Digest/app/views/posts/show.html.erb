<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
  	<h3><%= @post.title %></h3>
  </div>

  <div class="panel-body">
    <h4>Summary:</h4>
  	<p><%= strip_tags(@post.summary) %></p>
    <h4>Author:</h4>
    <% if @post.author == nil %>
      <p>Not provided</p>
    <% else %>
      <p><%= @post.author %></p>
    <% end %>
    <h4>Image</h4>
    <% if @post.image == nil %>
      <p>Not provided</p>
    <% else %>
      <%= image_tag @post.image %>
    <% end %>
  </div>
  <div class="panel-body">
    <h4>Published Date:</h4>
    <p><%= @post.pubDate %></p>
    <h4>Source:</h4>
    <p><%= @post.source %></p>
    <h4>Link:</h4>
    <a href="#" ><%= @post.link %></a>
  </div>

</div>

<div class="panel panel-default">
  <div class="panel-heading">
  	Comments
  </div>
   <ul class="list-group">
    <% @post.comments.each do |comment| %>
      <li class="list-group-item">
          <h6><%= comment.user.full_name %></h6>
          <p><%= comment.content %></p>
      </li>
    <% end %>
    <li class="list-group-item">
    	<%= render partial: 'comment_form', locals: {post: @post} %>
    </li>
  </ul>

</div>

<div class="btn-group pull-right" role="group">
    <%= link_to 'Back', posts_path ,class: "btn btn-default" %>
</div>


